<h3>New order</h3>
<%= render 'form' %>

<!-- Modal -->
<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Available Products</h3>
  </div>
  <div class="modal-body">
    <% Product.available_products.each do |product| %>
      <div class="row-fluid">
        <div class="span3">
          <%= link_to image_tag("contact_icon.jpg", :class=>"product-image", :title => "View Details") %>
        </div>
        <div class="span6">
          <div class="products-details">
            <p>Name : <%= product.name %></p>
            <p>Price : 1500rs</p>
            <p>Quality : smokeness, cooling and good for rainy season.</p>
          </div>
        </div>
        <div class="span3">
          <div class="products-add">
            <a class="add-order btn btn-success" data-product-id="<%= product.name %>">Order This</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
  </div>
</div>

<script type="text/javascript">
  $('.add-order').on('click', function() {
    var productid = $(this).data("product-id");
    $('#order_product_id').val(productid)
    $('#myModal .close').click();
  });
</script>
